	BalanceOfProducts.Period AS Period,
	BalanceOfProducts.Recorder AS Recorder,
	BalanceOfProducts.LineNumber AS LineNumber,
	BalanceOfProducts.Active AS Active,
	BalanceOfProducts.RecordType AS RecordType,
	BalanceOfProducts.Product AS Product,
	BalanceOfProducts.Warehouse AS Warehouse,
	BalanceOfProducts.Quantity AS Quantity,
	BalanceOfProducts.PointInTime AS PointInTime
